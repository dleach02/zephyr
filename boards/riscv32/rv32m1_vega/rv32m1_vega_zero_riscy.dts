/dts-v1/;

#include "rv32m1_zero_riscy.dtsi"

/ {
	model = "OpenISA RV32M1 Vega Zero RISCY";
	compatible = "openisa,rv32m1";

	aliases {
		led0 = &green_led;
		led1 = &blue_led;
		led2 = &red_led;
		sw0 = &user_button_2;
		sw1 = &user_button_3;
		sw2 = &user_button_4;
		sw3 = &user_button_5;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,uart-pipe = &uart0;
		zephyr,flash = &flash0;
		zephyr,flash-ctrl = &fctrl0;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpioa 22 0>;
			label = "User LD1";
		};
		green_led: led_1 {
			gpios = <&gpioa 23 0>;
			label = "User LD2";
		};
		blue_led: led_2 {
			gpios = <&gpioa 24 0>;
			label = "User LD3";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_2: button_0 {
			label = "User SW2";
			gpios = <&gpioa 0 GPIO_INT_ACTIVE_LOW>;
		};
		user_button_3: button_1 {
			label = "User SW3";
			gpios = <&gpiob 8 GPIO_INT_ACTIVE_LOW>;
		};
		user_button_4: button_2 {
			label = "User SW4";
			gpios = <&gpiob 9 GPIO_INT_ACTIVE_LOW>;
		};
		user_button_5: button_3 {
			label = "User SW5";
			gpios = <&gpiob 12 GPIO_INT_ACTIVE_LOW>;
		};
	};
};

&uart0 {
	current-speed = <115200>;
	status = "ok";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/devices/dts/flash_partitions.html
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x01000000 0x00030000>;
			read-only;
		};

		storage_partition: partition@1e000 {
			label = "storage";
			reg = <0x01030000 0x00002000>;
		};

		scratch_partition: partition@20000 {
			label = "image-scratch";
			reg = <0x01032000 0x0000f000>;
		};
	};
};
